  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script>
    // Harita olu≈üturma
    const map = L.map('map').setView([41.0082, 28.9784], 13);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    let marker;
    let currentLocation = null;

    // Konum g√ºncelleme fonksiyonu
    function updateLocation(latlng) {
      currentLocation = latlng;
      
      if (marker) {
        map.removeLayer(marker);
      }
      
      marker = L.marker(latlng, {
        icon: L.divIcon({
          html: '<i class="fas fa-map-marker-alt" style="color: #FF5722; font-size: 32px;"></i>',
          iconSize: [32, 32],
          iconAnchor: [16, 32]
        })
      }).addTo(map);
      
      // Adres alanƒ±nƒ± g√ºncelle
      document.getElementById('pickup').value = 
        `üìç Konum Bilgisi:\n` +
        `Enlem: ${latlng.lat.toFixed(5)}\n` +
        `Boylam: ${latlng.lng.toFixed(5)}\n` +
        `Google Maps: https://www.google.com/maps?q=${latlng.lat},${latlng.lng}`;
        
      // Haritayƒ± bu konuma odakla
      map.setView(latlng, 15);
    }

    // Haritaya tƒ±klandƒ±ƒüƒ±nda
    map.on('click', function(e) {
      updateLocation(e.latlng);
    });

    // Konum bulma butonu
    document.getElementById('locateMe').addEventListener('click', function() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(
          function(position) {
            const userLatLng = {
              lat: position.coords.latitude,
              lng: position.coords.longitude
            };
            updateLocation(userLatLng);
          },
          function(error) {
            alert("Konum eri≈üimine izin vermelisiniz: " + error.message);
          },
          {
            enableHighAccuracy: true,
            timeout: 5000
          }
        );
      } else {
        alert("Tarayƒ±cƒ±nƒ±z konum bilgisini desteklemiyor.");
      }
    });

    // WhatsApp G√∂nder Butonu
    document.getElementById('taxiForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Form verilerini al
      const formData = {
        name: document.getElementById('fullName').value,
        phone: document.getElementById('phone').value,
        time: document.getElementById('pickupTime').value,
        pickup: document.getElementById('pickup').value,
        destination: document.getElementById('destination').value,
        notes: document.getElementById('notes').value,
        location: currentLocation ? `https://www.google.com/maps?q=${currentLocation.lat},${currentLocation.lng}` : null
      };

      // Tarih formatƒ±nƒ± d√ºzenle
      const formattedTime = formData.time ? new Date(formData.time).toLocaleString('tr-TR') : 'Hemen';
      
      // WhatsApp mesajƒ±nƒ± olu≈ütur
      let message = `üöñ *YENƒ∞ TAKSƒ∞ TALEBƒ∞* üöñ\n\n` +
        `üë§ *Ad Soyad:* ${formData.name}\n` +
        `üì± *Telefon:* ${formData.phone}\n` +
        `‚è∞ *Alƒ±m Zamanƒ±:* ${formattedTime}\n\n` +
        `üìç *Alƒ±nacak Konum:*\n${formData.pickup}\n\n`;
      
      // Konum linki varsa ekle
      if (formData.location) {
        message += `üó∫Ô∏è *Konum Linki:* ${formData.location}\n\n`;
      }
      
      message += `üèÅ *Varƒ±≈ü Konumu:*\n${formData.destination}\n\n` +
        `üìù *Ek Notlar:* ${formData.notes || 'Yok'}`;
      
      // WhatsApp'a y√∂nlendir
      const whatsappNumber = '905335115168';
      window.open(`https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`, '_blank');
    });

    // ƒ∞ptal Butonu
    document.getElementById('cancelBtn').addEventListener('click', function() {
      if (confirm('Formu temizlemek istediƒüinize emin misiniz?')) {
        document.getElementById('taxiForm').reset();
        if (marker) {
          map.removeLayer(marker);
          marker = null;
          currentLocation = null;
        }
        
        // Varsayƒ±lan tarihi yenile
        const now = new Date();
        now.setMinutes(now.getMinutes() + 30);
        const year = now.getFullYear();
        const month = String(now.getMonth() + 1).padStart(2, '0');
        const day = String(now.getDate()).padStart(2, '0');
        const hours = String(now.getHours()).padStart(2, '0');
        const minutes = String(now.getMinutes()).padStart(2, '0');
        document.getElementById('pickupTime').value = `${year}-${month}-${day}T${hours}:${minutes}`;
      }
    });

    // Telefon formatlama
    document.getElementById('phone').addEventListener('input', function(e) {
      let value = this.value.replace(/\D/g, '');
      if (value.length > 0) {
        value = value.match(/(\d{0,4})(\d{0,3})(\d{0,3})(\d{0,2})/);
        this.value = !value[2] ? value[1] : value[1] + ' ' + value[2] + (value[3] ? ' ' + value[3] : '') + (value[4] ? ' ' + value[4] : '');
      }
    });

    // Sayfa y√ºklendiƒüinde
    window.addEventListener('DOMContentLoaded', function() {
      const now = new Date();
      now.setMinutes(now.getMinutes() + 30);
      const year = now.getFullYear();
      const month = String(now.getMonth() + 1).padStart(2, '0');
      const day = String(now.getDate()).padStart(2, '0');
      const hours = String(now.getHours()).padStart(2, '0');
      const minutes = String(now.getMinutes()).padStart(2, '0');
      document.getElementById('pickupTime').value = `${year}-${month}-${day}T${hours}:${minutes}`;
      document.getElementById('pickupTime').min = `${year}-${month}-${day}T${hours}:${minutes}`;
    });
  </script>
